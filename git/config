[core]
    attributesFile = ~/.config/dotfiles/git/gitattributes
    editor = nvim
    pager = delta
    symlinks = false

[alias]
    branch-name = "branch --show-current"
    branches = "for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes"
    down = "pull --rebase --prune"
    last = "log -1 --stat --show-signature --pretty=full"
    lob = "!git lol develop..$(git rev-parse --abbrev-ref HEAD)"
    lol = "log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'"
    lom = "!git lol main..$(git rev-parse --abbrev-ref HEAD)"
    meta = "show --quiet --pretty=fuller"
    publish = "push -u origin HEAD -f"
    wip = "commit -am '[skip-ci] WIP' --no-verify"

[includeIf "gitdir:~/workspace/izi/"]
    path = ~/.config/dotfiles/git/izi

[delta]
    dark = true
    line-numbers = true
    navigate = true

[help]
	autocorrect = 1

[advice]
	addEmptyPathspec = false

[color]
    ui = true

[color "status"]
    added = "green"
    changed = "yellow"
    untracked = "magenta"

[branch]
	sort = -committerdate

[rerere]
	enabled = true

[gpg]
	program = gpg2

[commit]
	gpgsign = true

[format]
    pretty = oneline

[checkout]
	workers = 4

[rebase]
    autostash = true
	updateRefs = true

[pull]
    rebase = true
    autostash = true

[push]
	autoSetUpRemote = true

[diff]
    colorMoved = default
    algorithm = histogram

[merge]
    conflictstyle = diff3

[interactive]
    diffFilter = delta --color-only

